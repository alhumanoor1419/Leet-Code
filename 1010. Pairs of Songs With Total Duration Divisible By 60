class Solution:
    def numPairsDivisibleBy60(self, time: List[int]) -> int:
        ans = 0
        count = [0] * 60  # counts of each remainder from 0 to 59

        for t in time:
            r = t % 60
            # Add number of songs seen so far that can pair with current one
            ans += count[(60 - r) % 60]
            # Now count this remainder for future songs
            count[r] += 1

        return ans
