class Solution:
    def arrangeCoins(self, n: int) -> int:
        left, right = 0, n
        
        while left <= right:
            mid = (left + right) // 2
            coins = mid * (mid + 1) // 2
            
            if coins == n:
                return mid
            if coins < n:
                left = mid + 1
            else:
                right = mid - 1
        
        return right   # right is the largest k such that k(k+1)/2 â‰¤ n
